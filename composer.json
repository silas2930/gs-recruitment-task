{
  "name": "candidate/sg-recruitment-task",
  "description": "CLI application using Symfony components to process messages into inspections and incident reports.",
  "type": "project",
  "version": "1.0.0",
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "symfony/console": "^7.0",
    "monolog/monolog": "^3.6",
    "symfony/filesystem": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "app": "php bin/console app:process:messages",
    "test": "php -d zend.assertions=1 vendor/bin/phpunit --testdox"
  }
}